<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#4285f4"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:id="$+id:title_area"
        ohos:orientation="horizontal"
        ohos:height="80vp"
        ohos:width="match_parent">
        <Image
            ohos:weight="1"
            ohos:id="$+id:navigation_button"
            ohos:height="80"
            ohos:width="80"
            ohos:left_margin="20vp"
            ohos:image_src="$media:nav_icom"
            ohos:layout_alignment="vertical_center"/>
        <Text
            ohos:weight="8"
            ohos:height="match_parent"
            ohos:text="MUSIC"
            ohos:text_color="black"
            ohos:text_alignment="center"
            ohos:width="match_parent"/>
        <Image
            ohos:weight="1"
            ohos:id="$+id:search_button"
            ohos:height="80"
            ohos:width="80"
            ohos:right_margin="20vp"
            ohos:image_src="$media:search_icon"
            ohos:layout_alignment="vertical_center"/>

    </DirectionalLayout>

    <TabList
        ohos:id="$+id:tab_list"
        ohos:background_element="#4285f4"
        ohos:translation_z="10vp"
        ohos:weight="1"
        ohos:tab_margin="24vp"
        ohos:tab_length="140vp"
        ohos:text_size="20fp"
        ohos:height="36vp"
        ohos:width="match_parent"
        ohos:layout_alignment="center"
        ohos:orientation="horizontal"
        ohos:text_alignment="center"
        ohos:normal_text_color="#c7dbfc"
        ohos:selected_text_color="white"
        ohos:selected_tab_indicator_color="#ffb700"
        ohos:selected_tab_indicator_height="2vp"/>

    <StackLayout
        ohos:id="$+id:mainstack"
        ohos:background_element="#f5f5f5"
        ohos:weight="8"
        ohos:height="match_parent"
        ohos:width="match_parent"
        />

    <DependentLayout
        ohos:id="$+id:player_layout"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:weight="1.5"
        ohos:background_element="white">
        <ProgressBar
            ohos:id="$+id:music_progress"
            ohos:height="5vp"
            ohos:width="match_parent"
            ohos:progress="60"
            ohos:progress_color="#c7dbfc"
            ohos:align_parent_top="true"/>
        <Image
            ohos:id="$+id:music_item_imag"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:image_src="black"
            ohos:align_parent_left="true"
            ohos:left_margin="20vp"
            ohos:vertical_center="true"/>
        <Text
            ohos:id="$+id:music_item_name"
            ohos:right_of="$id:music_item_imag"
            ohos:align_top="$id:music_item_imag"
            ohos:text="MUSIC_NAME"
            ohos:text_color="black"
            ohos:text_size="12fp"
            ohos:left_margin="10vp"
            ohos:height="30vp"
            ohos:width="match_parent"/>
        <Text
            ohos:id="$+id:music_item_author"
            ohos:right_of="$id:music_item_imag"
            ohos:below="$id:music_item_name"
            ohos:text="MUSIC_AUTHOR"
            ohos:left_margin="10vp"
            ohos:text_size="10fp"
            ohos:text_color="#aeaeae"
            ohos:height="30vp"
            ohos:width="match_parent"/>

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:vertical_center="true"
            ohos:align_parent_right="true"
            ohos:orientation="horizontal">
            <Image
                ohos:id="$+id:play_button"
                ohos:height="40vp"
                ohos:width="40vp"
                ohos:image_src="$media:pause_icon"
                ohos:layout_alignment="vertical_center"/>
            <Image
                ohos:id="$+id:next_button"
                ohos:height="40vp"
                ohos:width="40vp"
                ohos:image_src="$media:next_song_icon"
                ohos:layout_alignment="vertical_center"/>

        </DirectionalLayout>
    </DependentLayout>
</DirectionalLayout>