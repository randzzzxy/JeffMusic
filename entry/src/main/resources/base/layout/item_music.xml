<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="120vp"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Image
        ohos:id="$+id:music_item_imag"
        ohos:height="80"
        ohos:width="80"
        ohos:image_src="black"
        ohos:align_left="30vp"
        ohos:vertical_center="true"/>
    <Text
        ohos:id="$+id:music_item_name"
        ohos:right_of="$id:music_item_imag"
        ohos:align_top="$id:music_item_imag"
        ohos:text="MUSIC_NAME"
        ohos:text_color="black"
        ohos:height="30vp"
        ohos:width="match_parent"/>
    <Text
        ohos:id="$+id:music_item_author"
        ohos:right_of="$id:music_item_imag"
        ohos:below="$id:music_item_name"
        ohos:text="MUSIC_AUTHOR"
        ohos:text_color="#aeaeae"
        ohos:height="30vp"
        ohos:width="match_parent"/>
</DependentLayout>