<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <DependentLayout
                    ohos:width="match_parent"
                    ohos:height="180vp"
                    ohos:background_element="#4285f4"
                    ohos:top_padding="20vp"
                    ohos:left="10vp">

        <Image
            ohos:top_margin="20vp"
            ohos:width="75vp"
            ohos:height="75vp"
            ohos:align_parent_left="true"
            ohos:image_src="black" />

        <Text
            ohos:id="$+id:name_text"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:above="$+id:mail_tv"
            ohos:text="cmos"
            ohos:text_color="#fff"
            ohos:text_size="16fp" />

        <Text
            ohos:id="$+id:mail_tv"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:align_parent_bottom="true"
            ohos:text="com.example@126.com"
            ohos:text_color="#fff"
            ohos:text_size="16fp" />
    </DependentLayout>

    <DirectionalLayout
        ohos:orientation="vertical"
        ohos:left_padding="10vp"
        ohos:height="match_parent"
        ohos:width="match_parent">
        <DirectionalLayout
            ohos:height="40vp"
            ohos:orientation="horizontal"
            ohos:width="match_parent">
            <Image
                ohos:layout_alignment="center"
                ohos:height="34vp"
                ohos:width="34vp"
                ohos:image_src="black"/>
            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text_color="black"
                ohos:text="HHHHHHH"
                ohos:text_alignment="left|vertical_center"/>
        </DirectionalLayout>
    </DirectionalLayout>

</DirectionalLayout>