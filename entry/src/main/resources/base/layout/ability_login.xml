<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:top_margin="20vp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Image
            ohos:id="$+id:exit_button"
            ohos:left_margin="5vp"
            ohos:weight="1"
            ohos:height="20vp"
            ohos:width="20vp"
            ohos:image_src="$media:exitIcon"/>
        <Text
            ohos:weight="10"
            ohos:height="20vp"
            ohos:width="match_parent"
            ohos:text_size="14fp"
            ohos:text="登陆"
            ohos:text_alignment="center"/>
        <Text
            ohos:right_margin="5vp"
            ohos:weight="2"
            ohos:id="$+id:login_change_text"
            ohos:text_size="12fp"
            ohos:height="20vp"
            ohos:width="50vp"
            ohos:text="注册帐号"/>
    </DirectionalLayout>

    <TextField
        ohos:id="$+id:nick_name_text"
        ohos:left_margin="40vp"
        ohos:right_margin="40vp"
        ohos:top_margin="40vp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_alignment="left"
        ohos:text_size="20vp"
        ohos:hint="请输入用户名"/>

    <TextField
        ohos:id="$+id:password_text"
        ohos:left_margin="40vp"
        ohos:right_margin="40vp"
        ohos:top_margin="40vp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_alignment="left"
        ohos:text_size="20vp"
        ohos:hint="请输入密码"/>

    <Text
        ohos:margin="40vp"
        ohos:id="$+id:login_button"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:text_alignment="center"
        ohos:text="登陆"
        ohos:background_element="$graphic:background_login_button"
        ohos:text_color="white"
        ohos:text_size="14fp"/>

</DirectionalLayout>